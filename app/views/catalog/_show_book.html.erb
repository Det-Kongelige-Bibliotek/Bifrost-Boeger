<%# default partial to display solr document fields in catalog show view -%>
<dl class="dl-horizontal  dl-invert">
  <% document_show_fields(document).each do |solr_fname, field| -%>
      <% if should_render_show_field? document, field %>
          <dt class="blacklight-<%= solr_fname.parameterize %>"><%= render_bifrost_show_field_label document, :field => solr_fname %></dt>
          <dd class="blacklight-<%= solr_fname.parameterize %>"><%= render_document_show_field_value document, :field => solr_fname %></dd>
      <% end -%>
  <% end -%>
  <dt class="blacklight-barcode_ssm">Physical version:</dt>
  <dd class="blacklight-barcode_ssm">
    <%= link_to("Find the original physical version in Rex",
                create_rex_physical_book_search_link(@document['recordIdentifier_ssm'])) rescue nil %>
  </dd>
  <dt>Download:</dt>
  <dd><%= link_to(@document["title_tesim"].to_sentence.html_safe, @document["urls_ssm"].to_sentence.html_safe) rescue nil %></dd></dd>
</dl>
