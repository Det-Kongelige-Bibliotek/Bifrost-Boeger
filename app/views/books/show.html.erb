<%- model_class = Book -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:uuid) %>:</strong></dt>
  <dd><%= @book.uuid %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @book.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:subtitle) %>:</strong></dt>
  <dd><%= @book.subtitle %></dd>
  <dt><strong><%= model_class.human_attribute_name(:publisher) %>:</strong></dt>
  <dd><%= @book.publisher %></dd>
  <dt><strong><%= model_class.human_attribute_name(:originPlace) %>:</strong></dt>
  <dd><%= @book.originPlace %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dateIssued) %>:</strong></dt>
  <dd><%= @book.dateIssued %></dd>
  <dt><strong><%= model_class.human_attribute_name(:languageISO) %>:</strong></dt>
  <dd><%= @book.languageISO %></dd>
  <dt><strong><%= model_class.human_attribute_name(:languageText) %>:</strong></dt>
  <dd><%= @book.languageText %></dd>
  <dt><strong><%= model_class.human_attribute_name(:subject) %>:</strong></dt>
  <dd><%= @book.subject %></dd>
  <dt><strong><%= model_class.human_attribute_name(:physicalExtent) %>:</strong></dt>
  <dd><%= @book.physicalExtent %></dd>
  <dt><strong><%= model_class.human_attribute_name(:physicalLocation) %>:</strong></dt>
  <dd><%= @book.physicalLocation %></dd>
  <dt><strong><%= model_class.human_attribute_name(:url) %>:</strong></dt>
  <dd><%= @book.url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:author) %>:</strong></dt>
  <dd><%= @book.author %></dd>
  <dt><strong><%= model_class.human_attribute_name(:category) %>:</strong></dt>
  <dd><%= @book.category %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @book.description %></dd>

</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              books_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_book_path(@book), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              book_path(@book),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
