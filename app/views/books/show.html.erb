  <dt><strong><%= model_class.human_attribute_name(:authors) %>:</strong></dt>
  <dd><%= @book.authors %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rightlist) %>:</strong></dt>
  <dd><%= @book.rightlist %></dd>
  <dt><strong><%= model_class.human_attribute_name(:subjects) %>:</strong></dt>
  <dd><%= @book.subjects %></dd>
  <dt><strong><%= model_class.human_attribute_name(:images) %>:</strong></dt>
  <dd><%= @book.images %></dd>
  <dt><strong><%= model_class.human_attribute_name(:authorpid) %>:</strong></dt>
  <dd><%= @book.authorpid %></dd>
  <dt><strong><%= model_class.human_attribute_name(:creationdate) %>:</strong></dt>
  <dd><%= @book.creationdate %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              books_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_book_path(@book), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              book_path(@book),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
