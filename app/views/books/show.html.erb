  <dd><%= @book.bookid %></dd>
  <dt><strong><%= model_class.human_attribute_name(:identifier) %>:</strong></dt>
  <dd><%= @book.identifier %></dd>
  <dt><strong><%= model_class.human_attribute_name(:identifiertype) %>:</strong></dt>
  <dd><%= @book.identifiertype %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @book.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:publicationdate) %>:</strong></dt>
  <dd><%= @book.publicationdate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:publishername) %>:</strong></dt>
  <dd><%= @book.publishername %></dd>
  <dt><strong><%= model_class.human_attribute_name(:maindescription) %>:</strong></dt>
  <dd><%= @book.maindescription %></dd>
  <dt><strong><%= model_class.human_attribute_name(:digitalprotection) %>:</strong></dt>
  <dd><%= @book.digitalprotection %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @book.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contributor_id) %>:</strong></dt>
  <dd><%= @book.contributor_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contributor_content) %>:</strong></dt>
  <dd><%= @book.contributor_content %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contributorrolecode) %>:</strong></dt>
  <dd><%= @book.contributorrolecode %></dd>
  <dt><strong><%= model_class.human_attribute_name(:namesbeforekey) %>:</strong></dt>
  <dd><%= @book.namesbeforekey %></dd>
  <dt><strong><%= model_class.human_attribute_name(:keynames) %>:</strong></dt>
  <dd><%= @book.keynames %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contributorrolename) %>:</strong></dt>
  <dd><%= @book.contributorrolename %></dd>
